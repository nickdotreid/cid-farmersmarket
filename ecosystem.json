{
  "apps" : [{
    "name"      : "farmersmarket",
    "xscript"    : "server/app.js",
    "script"    : "/usr/local/bin/grunt",
    "args"      : "['serve:dist']",
    "env": {
      "COMMON_VARIABLE": "true"
    },
    "dev" : {
      "NODE_ENV": "development",
    },
    "prod" : {
      "NODE_ENV": "production",
    }
  }],
  "deploy" : {
    "prod" : {
      "user" : "lsiden",
      "host" : "104.131.173.158",
      "ref"  : "origin/master",
      "repo" : "https://github.com/lsiden/cid-farmersmarket.git",
      "path" : ".",
      "post-deploy" : "pm2 startOrRestart ecosystem.json --env production"
    },
    "dev" : {
      "user" : "lsiden",
      "host" : "104.131.173.158",
      "ref"  : "origin/dev",
      "repo" : "https://github.com/lsiden/cid-farmersmarket.git",
      "path" : ".",
      "post-deploy" : "pm2 startOrRestart ecosystem.json --env dev"
    }
  }
}
